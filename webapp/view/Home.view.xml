<mvc:View
    controllerName="qualitybtpportal.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    displayBlock="true">

    <Page
        id="homePage"
        class="sapUiResponsiveContentPadding dashboardPageBackground">

        <customHeader>
            <Bar class="dashboardHeader">
                <contentLeft>
                    <Title text="Quality Dashboard" class="dashboardTitle" />
                </contentLeft>
                <contentRight>
                    <Button
                        id="logoutButton"
                        text="Logout"
                        press="onLogoutPress"
                        icon="sap-icon://log"
                        type="Reject" />
                </contentRight>
            </Bar>
        </customHeader>

        <content>
            <l:Grid
                defaultSpan="L3 M6 S12"
                hSpacing="2"
                vSpacing="2"
                class="sapUiMediumMarginTop">

                <GenericTile
                    header="Inspection Lot"
                    press="onInspectionTilePress"
                    frameType="OneByOne"
                    class="tileShadow">
                    <tileContent>
                        <TileContent>
                            <content>
                                <VBox justifyContent="Center" alignItems="Center">
                                    <core:Icon src="sap-icon://inspection" size="2.5rem" color="Default" class="sapUiTinyMarginBottom darkIcon"/>
                                    <Text text="Manage inspection lots efficiently." class="sapUiTinyMarginTop sapMText-Bold sapMText-Text darkText"/>
                                </VBox>
                            </content>
                        </TileContent>
                    </tileContent>
                </GenericTile>

                <GenericTile
                    header="Result Records"
                    press="onResultRecordsTilePress"
                    frameType="OneByOne"
                    class="tileShadow">
                    <tileContent>
                        <TileContent>
                            <content>
                                <VBox justifyContent="Center" alignItems="Center">
                                    <core:Icon src="sap-icon://record" size="2.5rem" color="Default" class="sapUiTinyMarginBottom darkIcon"/>
                                    <Text text="Easily track and manage results." class="sapUiTinyMarginTop sapMText-Bold sapMText-Text darkText"/>
                                </VBox>
                            </content>
                        </TileContent>
                    </tileContent>
                </GenericTile>

                <GenericTile
                    header="Usage Decision"
                    press="onUsageDecisiontTilePress"
                    frameType="OneByOne"
                    class="tileShadow">
                    <tileContent>
                        <TileContent>
                            <content>
                                <VBox justifyContent="Center" alignItems="Center">
                                    <core:Icon src="sap-icon://decision" size="2.5rem" color="Default" class="sapUiTinyMarginBottom darkIcon"/>
                                    <Text text="Make informed usage decisions." class="sapUiTinyMarginTop sapMText-Bold sapMText-Text darkText"/>
                                </VBox>
                            </content>
                        </TileContent>
                    </tileContent>
                </GenericTile>
            </l:Grid>
        </content>
    </Page>
</mvc:View>
