<mvc:View
    controllerName="qualitybtpportal.controller.Resultrecords"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">

    <Page title="Result Records">
        <headerContent>
            <Button text="Back" icon="sap-icon://nav-back" press="onNavBack"/>
        </headerContent>

        <content>
            <!-- Table bound to ZDD_QUA_RESULT EntitySet -->
            <Table id="resultTable"
                   inset="false"
                   items="{/ZDD_QUA_RESULT}">
                
                <headerToolbar>
                    <Toolbar>
                        <Title text="Quality Result Records" level="H2"/>
                    </Toolbar>
                </headerToolbar>

                <columns>
                    <Column><Text text="Inspection Lot"/></Column>
                    <Column><Text text="Plant"/></Column>
                    <Column><Text text="Material"/></Column>
                    <Column><Text text="Object Short Text"/></Column>
                    <Column><Text text="Lot Quantity"/></Column>
                    <Column><Text text="Insp. Characteristic"/></Column>
                    <Column><Text text="Status"/></Column>
                    <Column><Text text="Insp. Start Date"/></Column>
                    <Column><Text text="Insp. End Date"/></Column>
                    <Column><Text text="Recorded"/></Column>
                    <Column><Text text="Inspected"/></Column>
                    <Column><Text text="Defects"/></Column>
                    <Column><Text text="Valuation"/></Column>
                    <Column><Text text="Master Insp. Charac."/></Column>
                    <Column><Text text="Characteristic Text"/></Column>
                    <Column><Text text="Sample Quantity"/></Column>
                    <Column><Text text="Sample UoM"/></Column>
                    <Column><Text text="To be Inspected"/></Column>
                </columns>

                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{prueflos}"/>
                            <Text text="{werk}"/>
                            <Text text="{selmatnr}"/>
                            <Text text="{ktextmat}"/>
                            <Text text="{losmenge}"/>
                            <Text text="{merknr}"/>
                            <Text text="{satzstatus}"/>
                            <Text text="{path:'pruefdatuv', type:'sap.ui.model.type.Date', formatOptions:{style:'medium'}}"/>
                            <Text text="{path:'pruefdatub', type:'sap.ui.model.type.Date', formatOptions:{style:'medium'}}"/>
                            <Text text="{iststpumf}"/>
                            <Text text="{anzwertg}"/>
                            <Text text="{anzfehler}"/>
                            <Text text="{Valuation}"/>
                            <Text text="{verwmerkm}"/>
                            <Text text="{kurztext}"/>
                            <Text text="{probmgfak}"/>
                            <Text text="{probemgeh}"/>
                            <Text text="{sollstpumf}"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
